   <children>
      <Slider fx:id="slider" onMousePressed="#sliderPressed" onMouseReleased="#sliderReleased">
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </Slider>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="currentTimeLabel" text="00:00">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label text=":">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="totalTimeLabel" text="00:00">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="3.0">
         <children>
            <Button fx:id="rewindBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#rewind" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: transparent;">
